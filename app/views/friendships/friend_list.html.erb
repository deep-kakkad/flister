<!DOCTYPE>
<html>
<head>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Poiret+One" %>
<%= stylesheet_link_tag "bootstrap/css/bootstrap.min" %>
<style>
     td{padding:6px;}
     th{padding:6px;}

  *{
  font-family: 'Poiret One';
}
</style>
</head>
<body>

<center>

<p id="notice"><%= notice %></p>

<h1><B>Listing Friend</B></h1>
<% if @friends.present? %>
<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td align="center"><h3><B><%= friend.email %><h3></B></td>
         <td align="center"><h3><B><%= image_tag friend.profile_image.url(:medium) %><h3></B></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p><B>Currently you have no friend....</B></p>
 <% end %> 
<br>

<%= link_to 'Back', root_path,  :class => 'btn btn-primary' %>

</center>
</body>
</html>
